<odoo>

    <record id="view_construction_quality_tree" model="ir.ui.view">
        <field name="name">construction.quality.tree</field>
        <field name="model">construction.quality</field>
        <field name="arch" type="xml">
            <list string="Quality &amp; Safety">
                <field name="project_id"/>
                <field name="inspection_date"/>
                <field name="checklist"/>
                <field name="issues_found"/>
<!--                <field name="attachment_ids" widget="many2many_binary" options="{'accepted_file_extensions': 'image/*'}"/>-->
            </list>
        </field>
    </record>

    <record id="view_construction_quality_form" model="ir.ui.view">
        <field name="name">construction.quality.form</field>
        <field name="model">construction.quality</field>
        <field name="arch" type="xml">
            <form string="Quality &amp; Safety">
                <sheet>
                    <group>
                        <field name="project_id"/>
                        <field name="inspection_date"/>
                        <field name="checklist"/>
                        <field name="issues_found"/>
                        <field name="corrective_actions"/>
                        <field name="attachment_ids" widget="many2many_binary" options="{'accepted_file_extensions': 'image/*'}"/>
<!--                        <field name="attachment_ids" widget="image" options="{'size': [64, 64], 'zoom': true, 'preview_image': 'attachment_ids'}"/>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_construction_quality" model="ir.actions.act_window">
        <field name="name">Quality &amp; Safety</field>
        <field name="res_model">construction.quality</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="construction_quality_menu" name="Quality &amp; Safety" parent="construction_menu_root" action="action_construction_quality" sequence="80"/>
</odoo>
