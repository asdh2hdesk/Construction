<odoo>
    <record id="action_construction_progress" model="ir.actions.act_window">
        <field name="name">Project Progress</field>
        <field name="res_model">construction.progress</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="view_construction_progress_tree" model="ir.ui.view">
        <field name="name">construction.progress.tree</field>
        <field name="model">construction.progress</field>
        <field name="arch" type="xml">
            <list string="Project Progress">
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="date"/>
                <field name="progress_percent"/>
            </list>
        </field>
    </record>

    <record id="view_construction_progress_form" model="ir.ui.view">
        <field name="name">construction.progress.form</field>
        <field name="model">construction.progress</field>
        <field name="arch" type="xml">
            <form string="Progress Entry">
                <sheet>
                    <group>
                        <field name="project_id"/>
                        <field name="task_id"/>
                        <field name="date"/>
                        <field name="progress_percent"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="construction_progress_menu" name="Progress" parent="construction_menu_root" action="action_construction_progress"/>
</odoo>
