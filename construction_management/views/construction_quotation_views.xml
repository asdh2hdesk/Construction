<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Quotation Form View -->
    <record id="view_construction_quotation_form" model="ir.ui.view">
        <field name="name">construction.quotation.form</field>
        <field name="model">construction.quotation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send_quotation" string="Send to Client"
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve"
                            type="object" class="btn-success"
                            invisible="state not in ['draft', 'sent']"/>
                    <button name="action_reject" string="Reject"
                            type="object" class="btn-danger"
                            invisible="state not in ['draft', 'sent']"/>
                    <button name="action_convert_to_project" string="Convert to Project"
                            type="object" class="btn-primary"
                            invisible="state != 'approved' or project_id"/>
                    <button name="action_print_quotation" string="Print"
                            type="object" icon="fa-print"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,sent,approved,converted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_convert_to_project" type="object"
                                class="oe_stat_button" icon="fa-building"
                                invisible="not project_id">
                            <field name="project_id" widget="statinfo" string="Project"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" required="1"/>
<!--                            <field name="opportunity_id"-->
<!--                                   domain="[('partner_id', '=', partner_id), ('type', '=', 'opportunity')]"/>-->
                            <field name="date_quotation"/>
                            <field name="validity_date"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="margin_percent"/>
                            <field name="vat_percent"/>
                            <field name="transport_cost"/>
                            <field name="contract_value"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   placeholder="Enter final contract value..."/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Quotation Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="work_type"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="unit"/>
                                    <field name="surface_area"/>
                                    <field name="waste_percent"/>
                                    <field name="material_unit_cost"/>
                                    <field name="material_cost"/>
                                    <field name="labor_days"/>
                                    <field name="labor_rate_per_day"/>
                                    <field name="labor_cost"/>
                                    <field name="equipment_cost"/>
                                    <field name="line_total"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>

                            <group class="oe_subtotal_footer oe_right">
                                <field name="material_total" widget="monetary"/>
                                <field name="labor_total" widget="monetary"/>
                                <field name="equipment_total" widget="monetary"/>
                                <field name="transport_cost" widget="monetary"/>
                                <div class="oe_subtotal_footer_separator">
                                    <strong>Subtotal</strong>
                                </div>
                                <field name="subtotal" widget="monetary"
                                       class="oe_subtotal_footer_separator"/>
                                <field name="margin_amount" widget="monetary"
                                       string="Margin"/>
                                <field name="vat_amount" widget="monetary"
                                       string="VAT"/>
                                <div class="oe_subtotal_footer_separator">
                                    <strong>Total</strong>
                                </div>
                                <field name="total_amount" widget="monetary"
                                       class="oe_subtotal_footer_separator"
                                       style="font-size: 1.3em; font-weight: bold;"/>
                            </group>
                        </page>

                        <page string="Terms &amp; Conditions">
                            <field name="notes" placeholder="Enter terms and conditions..."/>
                        </page>

                        <page string="Internal Notes">
                            <field name="internal_notes" placeholder="Internal notes (not visible to client)..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Quotation list View -->
    <record id="view_construction_quotation_list" model="ir.ui.view">
        <field name="name">construction.quotation.list</field>
        <field name="model">construction.quotation</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'"
                  decoration-success="state == 'approved'"
                  decoration-muted="state == 'rejected'">
                <field name="name"/>
                <field name="date_quotation"/>
                <field name="partner_id"/>
                <field name="opportunity_id"/>
                <field name="total_amount" widget="monetary"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'sent'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'rejected'"/>
            </list>
        </field>
    </record>

    <!-- Quotation Action -->
    <record id="action_construction_quotation" model="ir.actions.act_window">
        <field name="name">Quotations</field>
        <field name="res_model">construction.quotation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_draft': 1, 'search_default_sent': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first quotation
            </p>
            <p>
                Automatically calculate materials, labor, and costs for construction projects.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_construction_quotation"
              name="Quotations"
              parent="construction_menu_root"
              action="action_construction_quotation"
              sequence="10"/>

    <!-- CRM Lead Form View Inherit -->
    <record id="view_crm_lead_form_construction" model="ir.ui.view">
        <field name="name">crm.lead.form.construction</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_quotations" type="object"
                        class="oe_stat_button" icon="fa-file-text-o">
                    <field name="quotation_count" widget="statinfo" string="Quotations"/>
                </button>
                <button name="action_view_projects" type="object"
                        class="oe_stat_button" icon="fa-building"
                        invisible="quotation_count == 0">
                    <field name="project_count" widget="statinfo" string="Projects"/>
                </button>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_create_quotation" string="Create Quotation"
                        type="object" class="btn-primary"
                        invisible="type != 'opportunity'"/>
            </xpath>
        </field>
    </record>

</odoo>